            /** @var \SplFileInfo $file */
            $finfo = finfo_open(FILEINFO_MIME_TYPE);
            $totalFiles = 0;
            foreach ($fileIterator as $file):
                $filename = $file->getFilename();
                if (!$file->isFile() || $file->isDir() || !$file->isReadable() || mb_substr($filename, 0, 1) === '.') continue;
                ++$totalFiles;
                $mediaType = finfo_file($finfo, $file->getRealPath());
                ?>
            <tr>
                <td>
                    <?php if ($isAdminUser): ?>
                    <input type="checkbox" name="filenames[]" value="<?= $escapeAttr($filename) ?>" aria-label="<?= $translate('Select file') ?>"/>
                    <?php endif; ?>
                    <?= $escape($filename) ?>
                    <ul class="actions">
                        <?php // $this->trigger('view.browse.actions', ['resource' => $file]); ?>
                        <?php if ($userIsAllowedDelete): ?>
                        <li><?= $hyperlink('', '#', [
                            'data-sidebar-selector' => '#sidebar',
                            'data-sidebar-content-url' => $url('admin/easy-admin/file-manager', ['action' => 'delete-confirm'], ['query' => ['filename' => $filename]]),
